<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Url</th>
      <th scope="col">Premium</th>
      <th scope="col">Thumbnail</th>
      <th scope="col">Author</th>
      <th scope="col">Section</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.title %></td>
        <td><%= episode.description %></td>
        <td><%= episode.url %></td>
        <td><%= episode.premium %></td>
        <td><%= episode.thumbnail %></td>
        <td><%= episode.author %></td>
        <td><%= episode.section_id %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

